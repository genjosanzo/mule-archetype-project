<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd" name="mule-new-project-archetype"
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<requiredProperties>
		<requiredProperty key="groupId">
			<defaultValue>org.mule</defaultValue>
		</requiredProperty>
		<requiredProperty key="artifactId">
			<defaultValue>mule-project</defaultValue>
		</requiredProperty>
		<requiredProperty key="version">
			<defaultValue>1.0-SNAPSHOT</defaultValue>
		</requiredProperty>
		<requiredProperty key="package">
			<defaultValue>org.mule</defaultValue>
		</requiredProperty>
        <requiredProperty key="transports">
            <defaultValue>file,http,jdbc,jms,vm</defaultValue>
        </requiredProperty>
		<requiredProperty key="modules">
            <defaultValue>client,cxf,management,scripting,sxc,xml</defaultValue>
        </requiredProperty>
		<requiredProperty key="muleVersion">
            <defaultValue>3.2.1</defaultValue>
        </requiredProperty>
    </requiredProperties>  
<fileSets>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.html</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/main/app</directory>
      <includes>
        <include>**/*.xml</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true" encoding="UTF-8">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" encoding="UTF-8">
      <directory>src/test/resources</directory>
      <includes>
        <include>**/*.xml</include>
        <include>**/log4j.properties</include>
      </includes>
    </fileSet>
   
    <fileSet filtered="true" encoding="UTF-8">
      <directory></directory>
      <includes>
        <include>MULE-README.txt</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>
